extends layout

block styles
    link(rel='stylesheet', href='/css/index.css')

block content
    #overlay
    #alert
    nav.navbar.navbar-default(role="navigation")
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(data-toggle="collapse" data-target="#collapsed-navbar")
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href="#") Brand

        .collapse.navbar-collapse(id="collapsed-navbar")
          ul.nav.navbar-nav
            li.active
              a(href="#") link
    center
      #container
        #containertop
          h1 Scheduler
          textarea#name(name='name', placeholder='Name of event (Optional)', maxlength='100', type='text')
          br
          br
          textarea#details(name='details', placeholder='Details of event (Optional)', maxlength='200', type='text')
          br
          br
          h2 Drag to select length of event
          #currenteventlength
          #eventlength
          br
          br
        #containercenter
          h2 Drag to select range of available dates
          #header
            #title
            button#previous <
            button#next >
          #calendar
        br
        #containerbottom
          h2 Options
          input#anonymous(type='checkbox', name='anonymous')
          label Anonymous
          input#multiple(type='checkbox', name='multiple')
          label Multiple Votes from Same User
          #containercreate
            button#create Create
block footer
      script(src='/js/index.js', type='text/javascript')