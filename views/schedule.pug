extends layout

include ./common/navbar.pug
include ./common/calendarmonth.pug
include ./common/calendarweek.pug
include ./common/popup.pug
include ./common/help.pug
include ./common/about.pug
include ./common/details.pug
include ./common/frame.pug
include ./common/analytics.pug
include ./schedule/username.pug

block styles
    link(rel='stylesheet', href='/css/index.css')
block content
    +navbar
    .content.container-fluid
        .row
            +frame('panel-success', 'Event details')
              #details
                +details
        .row
            +frame('panel-info', 'When can you make it?')
              #usernamegroup
                +username
              #calendarmonth(hidden='hidden')
                +calendarmonth
              #calendarweek(hidden='hidden')
                +calendarweek
        .row
            button#results.btn.btn-default(type="button" style="float: right;") Results
            button#submit.btn.btn-default(type="button" style="float: right;") Submit
        +popup
        +help
        +about
block footer
      script.
        var schedule = !{schedule}
        var data =!{data}
      script(src='/js/schedule.js', type='text/javascript')
      +analytics